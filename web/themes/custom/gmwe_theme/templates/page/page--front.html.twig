{#
/**
 * @file
 * Template for the main page.
 */
#}
{% extends 'page.html.twig' %}
{% block page_before %}
<!-- Hero -->
<header id="hero" class="d-flex">
  <div class="overlay"></div>
  <div class="container align-self-center">
    <div class="row align-items-center">
      <div class="col-sm text-left">
        <h1 class="display-3">Üdvözöljük!</h1>
        <p>Ez a weboldal a Dr. Göllner Mária Waldorf Egyesület oldala.</p>
        {#<p><a class="btn btn-primary btn-lg" href="#">Learn more »</a></p>#}
      </div>

      <div class="col-sm text-center">
        <img alt="" src="{{ file_url('/themes/custom/gmwe_theme/logo.svg') }}" />
      </div>
    </div>
  </div>
</header>
{% endblock %}
{% block page_content_container_class %}container-fluid{% endblock %}
{% block page_after %}
<!-- Testimonials -->
<section class="testimonials text-center bg-light">
  <div class="container">
    <h2 class="mb-5">Óvónőink</h2>
    <div class="row">
      <div class="col-lg-4">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">
          <img class="img-fluid rounded-circle mb-3" src="{{ img_placeholder_uri(500, 500) }}" alt="">
          <h5>Nyári Alma</h5>
          <p class="font-weight-light mb-0">„A dicsőség suhanó bizalma nehéz horgonyt vet.”</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">
          <img class="img-fluid rounded-circle mb-3" src="{{ img_placeholder_uri(500, 500) }}" alt="">
          <h5>Friss Virág</h5>
          <p class="font-weight-light mb-0">„A csillagok fennkölt gyümölcse önző elmélkedést kíván, mert a gyertya varázslatos reménye helyes dallamokból táplálkozik.”</p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">
          <img class="img-fluid rounded-circle mb-3" src="{{ img_placeholder_uri(500, 500) }}" alt="">
          <h5>Őszi Ibolya</h5>
          <p class="font-weight-light mb-0">„A szavak leheletnyi káosza érthetetlen eufóriába ejthet.”</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="call-to-action text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h2 class="mb-4">Ready to get started? Sign up now!</h2>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form>
          <div class="form-row">
            <div class="col-12 col-md-9 mb-2 mb-md-0">
              <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
            </div>
            <div class="col-12 col-md-3">
              <button type="submit" class="btn btn-block btn-lg btn-primary">Sign up!</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock %}
