{
    "name": "gtgt/gmwe",
    "description": "Dr. Göllner Mária Waldorf Egyesület honlapja",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://gmwe.hu",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://my.kani.hu"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "d3/d3",
                "version": "v3.5.17",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/d3/d3.git",
                    "type": "git",
                    "reference": "tags/v3.5.17"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "highlightjs/highlightjs",
                "version": "9.7.0",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/highlightjs/highlight.js.git",
                    "type": "git",
                    "reference": "tags/9.7.0"
                }
            }
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "composer/installers": "^1.9",
        "drupal/admin_toolbar": "^2.4",
        "drupal/ckeditor_markdown": "^1.2",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-project-message": "^9",
        "drupal/core-recommended": "^9",
        "drupal/entitygroupfield": "^1.0@alpha",
        "drupal/event": "^1.0@alpha",
        "drupal/front": "1.x-dev@dev",
        "drupal/gin": "^3.0@alpha",
        "drupal/group": "^1.3",
        "drupal/groupmedia": "^2.0@alpha",
        "drupal/l10n_client": "1.x-dev@dev",
        "drupal/radix": "^4.10",
        "drupal/radix_layouts": "^4.1",
        "drupal/smart_date_calendar_kit": "^2.0",
        "drupal/xmlrpc": "^1.0@beta"
    },
    "require-dev": {
        "cweagans/composer-patches": "^1.7",
        "d3/d3": "^3.5",
        "drupal/devel": "^4.0",
        "drush/drush": "^10.3",
        "highlightjs/highlightjs": "^9.7"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false
            }
        },
        "patches": {
            "drupal/devel": {
                "Fix webprofiler twig html dumper": "patch/devel/339-twig-html-dumper.patch",
                "Fix webprofiler event dispatcher": "patch/devel/344-event-dispatcher.patch"
            }
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, you’ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    },
    "scripts": {
        "watch": "yarn --cwd web/themes/custom/gmwe watch"
    }
}
